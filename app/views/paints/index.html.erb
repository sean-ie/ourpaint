  <div class="paint-index-page">
    <div class="container-wide">

      <div class="content">
          <div class="cards">
            <% @paints.each do | paint | %>
              <div>
              <%= link_to paint_path(paint) do  %>
                <div class="card-horizontal">
                <div>
                  <h6><%= paint.colour %></h6>
                  <h6><%= paint.brand %></h6>
                  <h6><%= paint.volume %></h6>
                </div>

                <%= cl_image_tag(paint.photo.key, height: 100, width: 100, crop: :fill) %>

                </div>
                <% end %>
              </div>
            <% end %>
          </div>

        <div id="map"
          style="width: 100%; height: 624px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

      </div>
    </div>

  </div>

</div>

<%= render 'shared/footer_relative' %>
