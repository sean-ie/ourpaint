  <div class="paint-index-page">
    <div class="container-wide">

      <div class="content">
          <div class="cards">
            <% @paints.each do | paint | %>
              <div>
              <%= link_to paint_path(paint) do  %>
                <div class="card-horizontal">
                <div>
                 <h6 class="card-horizontal-brand"><%= paint.brand %></h6>
                  <h4 class="card-horizontal-content"><%= paint.colour %></h4>
                </div>

                <%= cl_image_tag(paint.photo.key, height: 75, width: 75, crop: :fill) %>

                </div>
                <% end %>
              </div>
            <% end %>
          </div>

        <div id="map"
          style="width: 100%; height: 675px; border-radius: 5px"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

      </div>
    </div>

  </div>
