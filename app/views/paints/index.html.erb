<div class="container-wide">

<div class="content">
  <div class="cards">
      <% @paints.each do | paint | %>
        <div >
        <%= link_to paint_path(paint) do  %>
          <div class="card-horizontal">
           <h4><%= paint.colour %></h4>
           <h4><%= paint.brand %></h4>
           <h4><%= paint.volume %></h4>

          </div>
          <% end %>
        </div>
      <% end %>
    </div>

   <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>
