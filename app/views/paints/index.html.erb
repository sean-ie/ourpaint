<div class="container-wide">

<div class="content">
  <div class="cards">
      <% @paints.each do | paint | %>
        <div >
          <div class="card-horizontal">
           <h4><%= paint.colour %></h4>
           <h4><%= paint.brand %></h4>
           <h4><%= paint.volume %></h4>

          </div>
        </div>
      <% end %>
    </div>

   <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

</div>
