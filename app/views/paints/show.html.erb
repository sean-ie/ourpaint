<div class="banner-show">
 <div><h1 class="show-title-h2 top-align">Paint details</h1></div>
  <div class="card-map">
    <div class="card-show">
      <div class="card-image"><%= cl_image_tag(@paint.photo.key, height: 300, width: 300, crop: :fill) %></div>
      <div class="card-text">
        <h1><%= @paint.brand %></h1>
        <p><%= @paint.colour %></p>
        <p><%= @paint.address %></p>
        <p><%= @paint.volume %></p>
        <%= link_to "Book this paint!", new_paint_booking_path(@paint), class: "btn btn-success" %>
      </div>
    </div>
    <div class="map-show">
      <div id="map"
     style="width: 100%; height: 100%;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>

