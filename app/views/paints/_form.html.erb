<%= render "bookings/flash" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-3">

<%= simple_form_for [ @paint ] do |f| %>
  <%= f.input :brand, default: 'Pick from the dropdown list', collection: ['Pick from the list below', 'Abigail Ahern', 'Annie Sloan', 'Auro', 'Bedec', 'Blackfriar', 'Chiselwood', 'Craig & Rose', 'Crown', 'Designers Guild', 'Dulux', 'EarthBorn',
  'Ecos', 'Farrow & Ball', 'Fired Earth', 'Francescas Lime Wash', 'Johnstones', 'Laura Ashley', 'The Little Greene Paint Company', 'Nutshell Natural Paints', 'Paint by Conran', 'Paint & Paper Library', 'Rose of Jericho', 'Sanderson', 'Siecle', 'Zoffany'] %>
  <%= f.input :colour, placeholder: 'E.g. ...Twilight Dawn' %>
  <%= f.input :volume, placeholder: 'E.g. ...0.75l, 1.5' %>
  <%= f.input :address, placeholder: 'E.g. ...5 Jarvis Road, London' %>
  <%#= f.input :address, placeholder: 'Enter your address here' %>
  <br>
  <%= f.label :photo, class: 'block' %>
  <%= f.input_field :photo, as: :file,  class: 'photo-button' %>
  <br>
  <br>
  <%= f.submit "List Your Paint", class: "btn btn-success" %>
  <br>
  <br>
<% end %>

    </div>
  </div>
</div>
